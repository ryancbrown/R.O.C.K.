<div class="container mx-auto event-display">
    <div class="flex mb-4 w-5/6 p-2 rounded overflow-hidden shadow-lg">
        <img class="w-full" src="{{event_image}}" alt="Image of {{event_name}}'s event'">
        <div class="px-6 py-4">
            <div class="font-bold text-3xl mb-2">{{event_name}}</div>
            <div class="font-bold text-xl mb-2">When? {{event_date}}</div>
            <div class="font-bold text-lg mb-2">Price: {{event_price}}</div>
            <p class="text-gray-700 text-base">
                {{event_description}}
            </p>
            <div class="font-bold text-lg mb-2"><a href="{{event_link}}" target="_blank">Event Link</a></div>


        </div>

    {{!-- metadata tags --}}
        <div class="px-6 py-4"> {{!-- maybe delete this later --}}
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">{{event_type}}</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">{{event_name}}</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">{{event_location}}</span>
        </div>
    </div>

</div>

